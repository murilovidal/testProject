<ul class="list-group" id="users_list">
  <% @users.each do |user| %>
    <li class="list-group-item" id="user_<%= user.id %>" ><%= user.email %> - 
    <% if user.admin %>
      ADMIN - <%= link_to 'Revogar Admin', toggleadmin_url(user.id), method: :post, data: { confirm: 'Tem certeza?' }, local: false, remote: true, class:'btn btn-danger btn-sm' %>
    </li>
    <% else %>
      Comum - <%= link_to 'Atribuir Admin', toggleadmin_url(user.id), method: :post, data: { confirm: 'Tem certeza?' }, local: false, remote: true, class:'btn btn-warning btn-sm' %>
    </li>
    <% end %>
<% end %>
</ul>