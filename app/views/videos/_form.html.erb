<%= form_with(model: video) do |form| %>
  <% if video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(video.errors.count, "error") %> proíbem esse video de ser salvo:</h2>

      <ul>
        <% video.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Título %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :URL %>
    <%= form.text_field :url %>
  </div>

  <div class="actions">
    <%= form.submit 'Salvar', class:'btn btn-success btn-sm' %>
  </div>
<% end %>
