<%= render '/admin/navbar'%>
    <h3>Administrar Vídeos</h3><br>
    <%= link_to 'Voltar', admin_path, class:"btn btn-primary mb-2"%>
    <div class="container">
        <div class="row">
            <div class="col-sm">
                        <th scope="col"><a class="btn btn-success" href=<%= new_video_path %> role="button">Novo Vídeo</a></th>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Corpo</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">tags</th>
                        <th scope="col">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    <% @videos.each do |video| %>
                        <tr>
                            <td><%= video.id%></td>
                            <td><%= video.title%></td>
                            <td><%= video.url%></td>
                            <td><%= video.description%></td>
                            <td>                 
                                <% video.tags.each do |tag| %>
                                    <%= tag.try(:tag) %>
                                <% end %>
                            </td>
                            <td><a class="btn btn-warning btn-sm" href=<%= edit_video_path(video) %> role="button">Editar</a>
                            <a class="btn btn-info btn-sm" href=<%= video_path(video) %> role="button">Mostrar</a>
                        <a data-confirm="Tem certeza? " data-method="delete" href=<%= video_path(video) %> class="btn btn-danger btn-sm" role="button">Remover</a></td>
                        </tr>
                <% end %>
                </tbody>  
            </table>
        </div>
    </div>