<%= render '/admin/navbar'%>
    Administrar Vídeos<br>
    <%= link_to 'Voltar', admin_path, class:"btn btn-primary mb-2"%>
    <div class="container">

        <div class="row">
            <div class="col-sm">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Corpo</th>
                        <th scope="col">tags</th>
                        <th scope="col"><a class="btn btn-primary" href=<%= new_video_path %> role="button">Novo Vídeo</a></th>
                    </tr>
                </thead>
                <tbody>
                    <% @videos.each do |video| %>
                        <tr>
                            <td><%= video.id%></td>
                            <td><%= video.title%></td>
                            <td><%= video.url%></td>
                            <td><%= video.description%></td>
                            <td>                 
                                <% video.tags.each do |tag| %>
                                    <%= tag.try(:tag) %>
                                <% end %>
                            </td>
                            <td><a class="btn btn-warning" href=<%= edit_video_path(video) %> role="button">Editar</a></td>
                            <td><a class="btn btn-info" href=<%= video_path(video) %> role="button">Mostrar</a></td>
                            <td><a data-confirm="Tem certeza?" data-method="delete" href=<%= video_path(video) %> class="btn btn-danger" role="button">Remover</a></td>
                        </tr>
                <% end %>
                </tbody>  
            </table>
        </div>
    </div>