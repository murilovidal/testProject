<% if current_user.role == "admin"%>
    <%= render 'index_admin' %>
<% else %>
    <%= render '/home/navbar'%>
    <% @videos.each do |video| %>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-5"> <a href=<%= video_path(video)%>><%= video.title%></h1></a>
                    <p class="lead"><%= video.description%></p>

                    <iframe width="420" height="315"
                        src=<%= video.url%>> 
                    </iframe>
                    <p class="lead"> <%= video.description%></p>
                    tags:
                    <% video.tags.each do |tag| %>
                        <button type="button" class="btn btn-info btn-sm" disabled><%= tag.try(:tag) %></button>            
                    <% end %>
                    <hr class="my-4">          
                <p class="lead">Coment√°rios:</p>
                    <% video.comments.each do |comment| %>
                        <% comment.users.each do |user| %>
                                    <%= user.try(:name) %>
                                <% end %>:
                        <%= comment.try(:comment) %><br>
                    <% end %>
                    </h6>
                    <a class="btn btn-success" href=<%= comment_video_path(video) %> role="button">Comentar</a>
            </div>
        </div>
    <% end %>
<% end %>