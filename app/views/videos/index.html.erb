<% if current_user.role == "admin"%>
    <%= render 'index_admin' %>
<% else %>
    <%= render '/home/navbar'%>
    <% @videos.each do |video| %>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-5"> <a href=<%= video_path(video)%>><%= video.title%></h1></a>
                    <p class="lead"><%= video.description%></p>

                    <iframe width="420" height="315"
                        src=<%= video.url%>> 
                    </iframe>
                    <p class="lead"> <%= video.description%></p>
                    <a class="btn btn-success" href=<%= comment_video_path(video) %> role="button">Comentar</a>
            </div>
        </div>
    <% end %>
<% end %>