<table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Corpo</th>
                        <th scope="col">tags</th>
                        <th scope="col"><a class="btn btn-primary" href=<%= new_article_path %> role="button">Nova Notícia</a></th>
                    </tr>
                </thead>
                <tbody>
                    <% @articles.each do |article| %>
                        <tr>
                            <td><%= article.id%></td>
                            <td><%= article.title%></td>
                            <td><%= article.body%></td>
                            <td>                 
                                <% article.tags.each do |tag| %>
                                    <%= tag.try(:tag) %>
                                <% end %>
                            </td>
                            <td><a class="btn btn-warning" href=<%= edit_article_path(article) %> role="button">Editar</a></td>
                            <td><a class="btn btn-info" href=<%= article_path(article) %> role="button">Mostrar</a></td>
                            <td><a data-confirm="Tem certeza?" data-method="delete" href=<%= article_path(article) %> class="btn btn-danger" role="button">Remover</a></td>
                        </tr>
                <% end %>
                </tbody>  
            </table>